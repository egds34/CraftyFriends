generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  BASIC
  PREMIUM
  ADMIN
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String?
  image             String?
  emailVerified     DateTime?
  password          String?
  minecraftUsername String?
  stripeCustomerId  String?   @unique
  role              Role      @default(BASIC)
  twoFactorSecret   String?   // For Authenticator App
  isTwoFactorEnabled Boolean @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  
  subscriptions     Subscription[]
  accounts          Account[]
  sessions          Session[]
  posts             Post[]
  passwordHistory   PasswordHistory[]
}

model Advancement {
  id          String   @id // e.g., "minecraft:story/mine_diamond"
  name        String
  description String?
  icon        String?
  category    String?
  
  userAdvancements UserAdvancement[]
}

model UserAdvancement {
  id            String   @id @default(cuid())
  username      String   // Minecraft username
  advancementId String
  done          Boolean  @default(false)
  updatedAt     DateTime @updatedAt

  advancement   Advancement @relation(fields: [advancementId], references: [id], onDelete: Cascade)

  @@unique([username, advancementId])
  @@index([username])
  @@index([advancementId])
}

model PasswordHistory {
  id        String   @id @default(cuid())
  userId    String
  hash      String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
}

model PasswordResetToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id String @id @default(cuid())

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

model Subscription {
  transactionId    String    @id @default(cuid())
  currentPeriodEnd DateTime?
  cancelAtPeriodEnd Boolean  @default(false)
  
  category         String    @default("membership") // e.g., "membership", "addon"
  priceId          String?

  // Foreign key to User
  id               String    
  user             User      @relation(fields: [id], references: [id], onDelete: Cascade)
  
  // Ensure a user can't have duplicate subscriptions for the same price/product if desired, 
  // but for now strictly just removing the @unique on 'id' permits multiple subs.
}

model ServerMetric {
  id                String   @id @default(cuid())
  timestamp         DateTime @default(now())
  serverName        String
  tps               Float
  mspt              Float
  onlinePlayerCount Int
  maxPlayers        Int
  freeMemory        BigInt
  totalMemory       BigInt
  maxMemory         BigInt
  loadedChunks      Int
  entityCount       Int
  cpuUsage          Float
  uploadBytes       BigInt
  downloadBytes     BigInt
  diskUsage         BigInt
  status            String   @default("ONLINE")
  startTime         BigInt   @default(0) // Unix timestamp (ms)
  nextRestart       String?

  @@index([timestamp])
  @@index([serverName])
}

model Product {
  id              String   @id @default(cuid())
  stripeProductId String   @unique
  stripePriceId   String?  @unique
  name            String
  description     String?
  price           Float
  currency        String   @default("usd")
  category        String
  type            String   // "subscription" or "one-time"
  features        String[] // Array of feature strings
  active          Boolean  @default(true)
  metadata        Json?    // Store additional Stripe metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
  @@index([active])
}

enum EventType {
  GAME
  SOCIAL
  MAINTENANCE
  COMPETITION
  SPECIAL
}

model Event {
  id              String    @id @default(cuid())
  title           String
  description     String?
  startTime       DateTime
  durationMinutes Int
  type            EventType
  seriesId        String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([startTime])
}

model EventTypeInfo {
  id            String   @id @default(cuid())
  title         String   @unique
  description   String
  image         String
  shadowColor   String
  hoverColor    String
  howTo         String[]
  rules         String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
model Statistic {
  id          String   @id // e.g., "minecraft:custom:minecraft:walk_one_cm"
  category    String   // e.g., "minecraft:custom"
  name        String   // e.g., "minecraft:walk_one_cm"
  displayName String?

  playerStats PlayerStatistic[]

  @@index([category])
}

model PlayerStatistic {
  id        String   @id @default(cuid())
  username  String   // Minecraft username
  statId    String
  value     BigInt
  updatedAt DateTime @updatedAt

  statistic Statistic @relation(fields: [statId], references: [id], onDelete: Cascade)

  @@unique([username, statId])
  @@index([username])
  @@index([statId])
}

model Post {
  id        String   @id @default(cuid())
  title     String
  excerpt   String
  content   String   @db.Text
  image     String
  category  String
  author    String
  authorId  String
  published Boolean  @default(true)
  featured  Boolean  @default(false)
  readTime  String   @default("1 min")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([featured])
  @@index([createdAt])
}
