generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  BASIC
  PREMIUM
  ADMIN
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String?
  image             String?
  emailVerified     DateTime?
  password          String?
  minecraftUsername String?
  stripeCustomerId  String?   @unique
  role              Role      @default(BASIC)
  twoFactorSecret   String?   // For Authenticator App
  isTwoFactorEnabled Boolean @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  
  subscriptions     Subscription[]
  accounts          Account[]
  sessions          Session[]
  passwordHistory   PasswordHistory[]
}

model PasswordHistory {
  id        String   @id @default(cuid())
  userId    String
  hash      String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
}

model PasswordResetToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id String @id @default(cuid())

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

model Subscription {
  transactionId    String    @id @default(cuid())
  currentPeriodEnd DateTime?
  cancelAtPeriodEnd Boolean  @default(false)
  
  category         String    @default("membership") // e.g., "membership", "addon"
  priceId          String?

  // Foreign key to User
  id               String    
  user             User      @relation(fields: [id], references: [id], onDelete: Cascade)
  
  // Ensure a user can't have duplicate subscriptions for the same price/product if desired, 
  // but for now strictly just removing the @unique on 'id' permits multiple subs.
}

model ServerMetric {
  id                String   @id @default(cuid())
  timestamp         DateTime @default(now())
  serverName        String
  tps               Float
  mspt              Float
  onlinePlayerCount Int
  maxPlayers        Int
  freeMemory        BigInt
  totalMemory       BigInt
  maxMemory         BigInt
  loadedChunks      Int
  entityCount       Int
  cpuUsage          Float
  uploadBytes       BigInt
  downloadBytes     BigInt
  diskUsage         BigInt
  status            String   @default("ONLINE")
  startTime         BigInt   @default(0) // Unix timestamp (ms)
  nextRestart       String?

  @@index([timestamp])
  @@index([serverName])
}

model Product {
  id              String   @id @default(cuid())
  stripeProductId String   @unique
  stripePriceId   String?  @unique
  name            String
  description     String?
  price           Float
  currency        String   @default("usd")
  category        String
  type            String   // "subscription" or "one-time"
  features        String[] // Array of feature strings
  active          Boolean  @default(true)
  metadata        Json?    // Store additional Stripe metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
  @@index([active])
}
